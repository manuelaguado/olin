RewriteEngine on

#Error 404 página personalizada
ErrorDocument 404 /
ErrorDocument 403 /

#evitar navegar entre directorios
Options All -Indexes

Options -MultiViews

RewriteBase /

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
